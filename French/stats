echo "--------------------------------"
printf "new words: "
egrep '::1' .french_vocab.voc -c
printf "in progress: "
egrep '::0|::2' .french_vocab.voc -c
echo ""
printf "no score: "
egrep 999 .french_vocab.voc -c
printf "to review: "
egrep '12|13|14' .french_vocab.voc -c
printf "learnt: "
grep 15 .french_vocab.voc -c
echo "--------------------------------"

